{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "外接摄像头",
      "type": "debugpy",
      "request": "launch",
      "program": "camera_calibrate.py",
      "cwd": "${workspaceFolder}/",
      "console": "integratedTerminal"
    },    {
      "name": "后端 (Flask)",
      "type": "debugpy",
      "request": "launch",
      "program": "app.py",
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "http://192.168.2.8:8080/video", 
        "1" 
      ],
      "env": { "PYTHONPATH": "${workspaceFolder}/backend" },
      "console": "integratedTerminal"
    },
    {
      "name": "前端 (Nuxt)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "一键启动",
      "configurations": ["后端 (Flask)", "前端 (Nuxt)"]
    }
  ]
}